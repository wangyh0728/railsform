  <body>
<div class="bs-example">
    <div class="page-header">
        <h1>Lost And Found </h1>
    </div>
</div>


<%= form_tag(items_path, method: "get", id: "search-form") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= select_tag(:relation, options_for_select([['OR','OR'], ['AND', 'AND']])) %>
  <%= label_tag(:type, "Type:") %>
  <%= select_tag(:type, options_from_collection_for_select(Type.all, :title, :title)) %>
  <%= submit_tag("Search") %>
<% end %>

<%= yield %>

</body>
</html>
