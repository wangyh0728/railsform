<p id="notice"><%= notice %></p>

<h2>Listing Items</h2>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>

      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <% @type = Type.find_by type_id: item.type_id %>
        <td><%= @type.title %></td>
      
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

